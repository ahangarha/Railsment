<div class="flex flex-col gap-4 p-4">
  <%= form_with model: @group, class: 'flex flex-col gap-4 p-4 rounded bg-white' do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.text_field :name, placeholder: :name, class: 'border-b px-2 py-3', required: true %>
      <%= f.text_field :icon, placeholder: :icon, class: 'border-b px-2 py-3', required: true %>
    </div>
    <%= f.submit 'Save', class: 'btn-primary' %>

    <p class="text-xs italic text-gray-400">
      For icon, you need to add URL to a publicly available image on internet
    </p>
  <% end %>
</div>