<div class="flex flex-col gap-4 p-4">
  <%= form_with model: @payment, class: 'flex flex-col gap-4 p-4 rounded bg-white' do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.hidden_field :fallback_group_id, value: @group_id %>
      <%= f.text_field :name, placeholder: :name, class: 'border-b px-2 py-3', required: true %>
      <%= f.number_field :amount, placeholder: :amount, class: 'border-b px-2 py-3', required: true, min: 0, step: 0.01 %>
      <p>Choose at least one category:</p>
      <%= f.collection_check_boxes :group_ids, @user_groups, :id, :name, required: true do |item| %>
        <div class="flex gap-4 pl-4">
          <%= item.check_box(checked: item.value.to_s == @group_id) %>
          <%= item.label %>
        </div>
      <% end %>
    </div>
    <%= f.submit 'Save', class: 'btn-primary' %>
  <% end %>
</div>