<div class="flex flex-col gap-4 p-4">
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: 'flex flex-col gap-4 p-4 rounded bg-white') do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: :password  %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>